generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  role     Role     @default(USER)
  reserve Reserve[]
  domain   Domain   @relation(fields: [domainId], references: [id])
  domainId String
}

model Seat {
  id      String    @id @default(uuid())
  name    String    @unique
  type    String   
  reserve Reserve[]
  room    Room      @relation(fields: [roomId], references: [id])
  roomId  String
} 

model Reserve {
  id           String @id @default(uuid())
  user         User   @relation(fields: [userId], references: [id])
  userId       String
  seat         Seat   @relation(fields: [seatId], references: [id])
  seatId       String
  reservedDays String[]
  from         DateTime 
  to           DateTime
  status       String?
}

model Domain {
  id           String @id @default(uuid())
  name         String @unique
  office       Office[]
  user         User[]
}

model Office {
  id           String @id @default(uuid())
  name         String @unique
  domain       Domain @relation(fields: [domainId], references: [id])
  domainId     String
  room         Room[]
}

model Room {
  id           String @id @default(uuid())
  name         String
  office       Office @relation(fields: [officeId], references: [id])
  officeId     String
  seat         Seat[]
  gridPoints   Json?
  xSize        Int?
  ySize        Int?
}

