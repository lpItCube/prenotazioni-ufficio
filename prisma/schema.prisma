// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
}

model Seat {
  id      String    @id @default(uuid())
  name    String    @unique
  type    String   
  reserve Reserve[]
}

model Reserve {
  id           String @id @default(uuid())
  userId       String
  seat         Seat   @relation(fields: [seatId], references: [id])
  seatId       String
  reservedDays String[]
}
